<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="2dip"
    android:background="@drawable/image_dialog_box"
    android:orientation="vertical">

    <!-- 다이얼로그 최상단 태그 3개 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="10dip"
        android:paddingTop="15dip"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="80dp"
            android:layout_height="24dp"
            android:layout_gravity="center"
            android:layout_marginRight="10dp"
            android:background="@drawable/image_dialog_tag_box"
            android:text="#SONNIA"
            android:textAlignment="center"
            android:textSize="13dp"/>
        <TextView
            android:layout_width="80dp"
            android:layout_height="24dp"
            android:layout_gravity="center"
            android:layout_marginRight="10dp"
            android:background="@drawable/image_dialog_tag_box"
            android:text="#PARIS"
            android:textAlignment="center"
            android:textSize="13dp"/>
        <TextView
            android:layout_width="80dp"
            android:layout_height="24dp"
            android:layout_gravity="center"
            android:layout_marginRight="10dp"
            android:background="@drawable/image_dialog_tag_box"
            android:text="#AnalogFilm"
            android:textAlignment="center"
            android:textSize="13dp"/>
    </LinearLayout>


    <!-- 선택된 마커의 사진-->
    <ImageView
        android:id="@+id/dialog_image"
        android:layout_width="234dp"
        android:layout_height="234dp"
        android:scaleType="centerCrop"
        android:layout_gravity="center"/>


    <!-- 해당 사진 정보 -->
    <!-- 작성자, 위치, 사용한 어플-->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
    <LinearLayout
        android:layout_width="110dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="10dp">
    <TextView
        android:id="@+id/image_dialog_photographer"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_marginLeft="10dip"
        android:layout_marginBottom="10dp"
        android:textColor="@color/dialog_colorViolet"
        android:text="Photographer"
        />
    <TextView
        android:id="@+id/image_dialog_location"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_marginLeft="10dip"
        android:layout_marginBottom="10dp"
        android:textColor="@color/dialog_colorViolet"
        android:text="Location"
        />
    <TextView
        android:id="@+id/image_dialog_appinfo"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_marginLeft="10dip"
        android:layout_marginBottom="10dp"
        android:textColor="@color/dialog_colorViolet"
        android:text="CAMERA"
        />
    </LinearLayout>
    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="10dp">
        <TextView
            android:id="@+id/image_dialog_photographer_data"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginLeft="10dip"
            android:layout_marginBottom="10dp"
            android:textColor="@color/dialog_colorCharcoal"
            android:text="SONNIA"
            />
        <TextView
            android:id="@+id/image_dialog_location_data"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginLeft="10dip"
            android:layout_marginBottom="10dp"
            android:textColor="@color/dialog_colorCharcoal"
            android:text="Paris"
            />
        <TextView
            android:id="@+id/image_dialog_appinfo_data"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginLeft="10dip"
            android:layout_marginBottom="10dp"
            android:textColor="@color/dialog_colorCharcoal"
            android:text="AnalogFilm"
            />
        <ImageView
            android:id="@+id/image_dialog_appinfo_data_camera1"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dip"
            />
    </LinearLayout>
    </LinearLayout>
</LinearLayout>
